---
const { ...project } = Astro.props || "Project";

const { Content } = await project.render();
---

<div class="project">
  <div
    class="project-description"
    style={project.data.position === "left" ? "order: 2" : null}
  >
    <h1>{project.data.title}</h1>
    <div class="vl"></div>
    <Content />
  </div>

  <img src={project.data.image} alt={project.data.description} width="450px" />
</div>

<style>
  .project {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-evenly;
    line-height: 1.4rem;
    padding: 0 1.5rem;
  }

  .vl {
    border-left: 2px solid var(--secondary-color);
    height: 4rem;
    margin: auto;
    display: block;
    width: 1px;
  }

  .project-description {
    max-width: 500px;
    line-height: 1.9rem;
    font-size: large;
    letter-spacing: 0.1rem;
  }

  .project-description h1 {
    text-align: center;
  }

  .project img {
    width: 100%;
    max-width: 550px;
  }

  @media (max-width: 1200px) {
    .project {
      flex-direction: column;
    }
    .project-description {
      order: 1;
    }
    .project img {
      order: 2;
      margin-top: 2rem;
    }
  }
</style>
