---
import Linkedin from "./UI/Linkedin.astro";
import Mail from "./UI/Mail.astro";
import Twitter from "./UI/Twitter.astro";
---

<nav class="nav">
  <a href="/" class="logo">Michael Breyton</a>
  <div class="socials">
    <a href="https://www.linkedin.com/in/mbreyton/"><Linkedin /></a>
    <a href="https://www.twitter.com/michael_webdev" target="_blank"
      ><Twitter /></a
    >
