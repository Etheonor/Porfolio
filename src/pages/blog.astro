---
import Layout from "../layouts/Layout.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "Michael Breyton | Blog";
---

<Layout title={pageTitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <div class="posts">
    {
      allPosts.map((post) => (
        <article class="post">
          <img src={post.frontmatter.image.url} alt="blog image" width="100%" />
          <p>{post.frontmatter.description}</p>
          <a href={post.url}>{post.frontmatter.title}</a>
        </article>
      ))
    }
  </div>
</Layout>

<style>
  .posts {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 5rem;
    max-width: 1200px;
  }

  .post {
    width: 15rem;
  }
</style>
